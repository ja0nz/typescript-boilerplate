#!/usr/bin/env sh
# Deno bundle w/ preloaded import map & timestamped output

# Prelude
_required_ "deno" || exit
IMPORT_MAP=$(test -f "$ROOT/import_map.json" && echo "--import-map $_")
TSCONFIG=$(test -f "$ROOT/tsconfig.json" && echo "--config $_")

FILE=$(echo $@ | grep -Po "[- \w]+\.(ts|js)" | tr \. -)
OUTPUT="$ROOT/compile/$(date +%Y-%m-%d_%H-%M-%S)_$FILE"
mkdir -p "$ROOT/compile"

deno compile -o $OUTPUT --import-map=$IMPORT_MAP $@
